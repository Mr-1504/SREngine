<?xml version="1.0"?>
<Technique Name="ShadowMap">
    <ShadowMapPass Name="DepthFBO" Directional="false">
        <FramebufferSettings DynamicResizing="true" DepthEnabled="true" SmoothSamples="1">
            <Size X="0" Y="0"/>
            <PreScale X="1.0" Y="1.0"/>
            <Depth Format="Auto" ClearValue="1.0"/>
            <Layer Format="R16_UNORM" R="0.0" G="0.0" B="0.0" A="1.0"/>
        </FramebufferSettings>
        <Shaders>
            <Override Type="Spatial" Path="Engine/Shaders/ShadowMap/depth-spatial.srsl"/>
            <Override Type="Skinned" Path="Engine/Shaders/ShadowMap/depth-skinned.srsl"/>
        </Shaders>
    </ShadowMapPass>
    <FramebufferPass Name="SceneViewFBO">
        <FramebufferSettings DynamicResizing="true" DepthEnabled="true" SmoothSamples="1">
            <Size X="0" Y="0"/>
            <PreScale X="1.0" Y="1.0"/>
            <Depth Format="Auto" ClearValue="1.0"/>
            <Layer Format="RGBA8_UNORM" R="0.0" G="0.0" B="0.0" A="1.0"/>
        </FramebufferSettings>
        <Passes>
            <PostProcessPass Shader="Engine/Shaders/ShadowMap/shadow-map.srsl">
                <Attachments>
                    <Attachment FBO="DepthFBO" Id="depthMap" Index="0"/>
                </Attachments>
            </PostProcessPass>
        </Passes>
    </FramebufferPass>
</Technique>